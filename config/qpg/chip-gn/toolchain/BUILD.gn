import("//build_overrides/build.gni")
import("//build_overrides/chip.gni")

import("${build_root}/toolchain/arm_gcc/arm_toolchain.gni")

declare_args() {
  qpg_ar = ""
  qpg_cc = ""
  qpg_cxx = ""
}

gcc_toolchain("qpgtoolchain") {
  ar = qpg_ar
  cc = qpg_cc
  cxx = qpg_cxx

  toolchain_args = {
    current_os = "freertos"
    is_clang = false
  }
}
