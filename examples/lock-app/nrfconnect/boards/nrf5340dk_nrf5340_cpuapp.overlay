/ {
	chosen {
		nordic,pm-ext-flash = &mx25r64;
	};

};

/* Disable unused peripherals to reduce power consumption */
&adc {
	status = "disabled";
};
&gpio1 {
	status = "disabled";
};
&i2c1 {
	status = "disabled";
};
&pwm0 {
	status = "disabled";
};
&spi2 {
	status = "disabled";
};
&usbd {
	status = "disabled";
};
